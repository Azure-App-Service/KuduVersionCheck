@model KuduVersionCheck.Models.StampEntriesViewModel

<!DOCTYPE html>

<html>
<head>
    <title>kuduversion</title>
</head>
<body>
    <div>
        <table border="1" style="font-family: Courier New, monospace">
            <tr>
                <th>Site</th>
                @foreach (var column in Model.Columns)
                {
                    <th>@column</th>
                }
            </tr>
            @foreach (var entry in Model.Entries)
            {
                <tr>
                    <td><a href="@(Model.ShowConsole ? entry.ConsoleUrl : entry.TestSiteUrl)" target="_blank">@entry.Name</a></td>
                    @foreach (var column in Model.Columns)
                    {
                        string val = "";
                        entry.Data.TryGetValue(column, out val);
                        <td>@val</td>
                    }
                </tr>
            }
        </table>
    </div>
</body>
</html>
